    if(escolha==1) {
        cout << "\n Ao chegar no fundo do buraco, "<<nome<<" observa uma espada presa a uma pedra, porém havia muitos escorpiões perto da espada." <<endl;
	    } else if(escolha==0)    {
        cout << "\n "<<nome<<" tenta descer pela escada, porém se rompe e ele cai com tudo no chão." <<endl;
        cout << "\n Você Perdeu!";
        return 0;
