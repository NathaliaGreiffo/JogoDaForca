    if(escolha==1) { //if para se a escolha for igual a 1 ela procede a linha 25.
        cout << "\n Ótima escolha "<<nome<<", vamos lá!." <<endl;
    } else if(escolha==0) { //"else if" se a escolha for igual a 0, o jogo informa (cout) que você perdeu.
        cout << "\n Uma pena "<<nome<<", volte outra hora." <<endl;
        cout << "\n Você Perdeu!";
        return 0; //"return 0", para finalizar o codigo
    } else { //"else", tudo que não for 1 ou 0, será informado que a opção não existe.
        cout << "\n Opção não existente, utilize somente opções válidas!" <<endl;
        cout << "\n Você Perdeu!";
        return 0;
