        cout << "\n Opção não existente, utilize somente opções válidas!" <<endl;
        cout << "\n Você Perdeu!";
        return 0;
    }
    cout << "\n Digite 1: Se aproximar.";
    cout << "\n Digite 0: Ignorar e continuar o caminho." <<endl;
    cin>>escolha;
    if(escolha==1) {
conquista = conquista + 1; //"conquista" é a variavel float para definir a conquista no final.
        } else if(escolha !=0)    {
        cout << "\n Opção não existente, utilize somente opções válidas!" <<endl;
        cout << "\n Você Perdeu!";
        return 0;
  }
