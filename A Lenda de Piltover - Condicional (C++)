    if(escolha==0) {
        cout << "\n "<<nome<<" encontra uma bananeira com um cacho de bananas maduras, ao lado de uma casa abandonada, chega perto da casa e fica de cara com a terrível cobra-cabeçuda." <<endl;
    } else if(escolha==1) {
        cout << "\n <<nome<< segue a profecia escrita na parede, retorna a caverna, porém as bananas que estavam ali tinham sido comidas pela terrível cobra-cabeçuda, que ficou enorme após comer as bananas, e com uma simples bocada, ela devora "<<nome<<"." <<endl;
