    cout << "\n Parabéns "<<nome<<", Você Ganhou!"<<endl;
    cout << " Você pegou: "<<conquista; //a variavel float "conquista" informa o resultado da somatória.
    cout << "/3 conquistas." <<endl;
    cout << "\n FIM";
