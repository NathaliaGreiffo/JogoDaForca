					case 9: // caso seja sorteado a palavra de numero 9 "SOCIAL" será efetuado essa case

					do{ // repetir essa palavra até que ela seja acertada ou que termine todas as tentativas

                        system("cls");
                        cout << "\tA palavra é\t" << letra1 << "\t" << letra2 << "\t" << letra3 << "\t" << letra4 << "\t" << letra5 << "\t" << letra6 << endl << endl; // letras que inicialmente recebem o underline, e serão substituida cada letra em seu lugar conforme o jogador acerta
                        cout << "Tentativas restantes: " << tentativas << endl;
                        cout << "Número de acertos: " << acertos << endl;
                        cout << "\nDigite uma letra: ";
                        cin >> letra;

                            if (letra =='s' || letra =='S' || letra =='o' || letra =='O' || letra =='c' || letra =='C' || letra =='i' || letra =='I' || letra =='a' || letra =='A' || letra =='l' || letra =='L') { // diminui as tentativas cada vez que o jogador seleciona uma letra, esteja ela no if ou else
                                cout << "Boa escolha, há essa letra" << endl;

                                if (letra =='s' || letra =='S'){
                                    letra1 ='S';

                                    if (l1>0){
                                    cout << "Preste atenção, essa letra já foi escolhida, você perdeu 1 tentativa." << endl;
                                    acertos--;
                                    }
                                    l1++;
                                }
                                if (letra =='o' || letra =='O'){ // se a letra selecionada for O, então executará esse comando
                                    letra2 ='O';

                                    if (l2>0){
                                    cout << "Preste atenção, essa letra já foi escolhida, você perdeu 1 tentativa." << endl;
                                    acertos--;
                                    }
                                    l2++;
                                }
                                if (letra =='c' || letra =='C'){ // se a letra selecionada for C, então executará esse if
                                    letra3 ='C';

                                    if (l3>0){
                                    cout << "Preste atenção, essa letra já foi escolhida, você perdeu 1 tentativa." << endl;
                                    acertos--;
                                    }
                                    l3++;
                                }
                                if (letra =='i' || letra =='I'){
                                    letra4 ='I';

                                    if (l4>0){
                                    cout << "Preste atenção, essa letra já foi escolhida, você perdeu 1 tentativa." << endl;
                                    acertos--;
                                    }
                                    l4++;
                                }
                                if (letra =='a' || letra =='A'){ // se a letra A for selecionada, executará esse if
                                    letra5 ='A';

                                    if (l5>0){
                                    cout << "Preste atenção, essa letra já foi escolhida, você perdeu 1 tentativa." << endl;
                                    acertos--;
                                    }
                                    l5++;
                                }
                                if (letra =='l' || letra =='L'){
                                    letra6 ='L';

                                    if (l6>0){
                                    acertos--;
                                    }
                                    l6++;
                                }
                                acertos++; // soma os acertos do jogador
                            }else{
                                cout << "Infelizmente, não há essa letra" << endl;
                            }
                        tentativas--; // diminui a quantidade de tentativas cada vez que o jogador seleciona uma letra
                        system("pause");

                    }while (tentativas>0 && acertos<6); // while em conjunto com do para repetir a palavra até que ainda tenha tentativas ou que o jogador acerte todas as letras
					break;
					}

                cout << endl << "Fim de Jogo."; // fim do jogo quando as alternativas esgotam ou quando o jogador acerta todas as letras

                    if (l1>0 && l2>0 && l3>0 && l4>0 && l5>0 && l6>0){ // se todas as letras receberem pelo menos 1 valor maior que 0, significa que o jogador acertou todas as letras e assim ganhou o jogo
                        cout << " Você Ganhou!" << endl; // exibe para o jogador que ele ganhou

                        if (palavra==0){ // se a palavra que o jogador acertou for a numero 0, então exibirá a resposta
                            cout << "SACOLA era a resposta." << endl;
                        }
                        if (palavra==1){ // se a palavra que o jogador acertou for a numero 1, então exibirá a resposta
                            cout << "RECAIR era a resposta." << endl;
                        }
                        if (palavra==2){ // se a palavra que o jogador acertou for a numero 2, então exibirá a resposta
                            cout << "LARICA era a resposta." << endl;
                        }
                        if (palavra==3){ // se a palavra que o jogador acertou for a numero 3, então exibirá a resposta
                            cout << "RAPOSA era a resposta." << endl;
                        }
                        if (palavra==4){ // se a palavra que o jogador acertou for a numero 4, então exibirá a resposta
                            cout << "CARROS era a resposta." << endl;
                        }
                        if (palavra==5){ // se a palavra que o jogador acertou for a numero 5, então exibirá a resposta
                            cout << "ESCOLA era a resposta." << endl;
                        }
                        if (palavra==6){ // se a palavra que o jogador acertou for a numero 6, então exibirá a resposta
                            cout << "PRESSA era a resposta." << endl;
                        }
                        if (palavra==7){ // se a palavra que o jogador acertou for a numero 7, então exibirá a resposta
                            cout << "ESPOSA era a resposta." << endl;
                        }
                        if (palavra==8){ // se a palavra que o jogador acertou for a numero 8, então exibirá a resposta
                            cout << "ACESSO era a resposta." << endl;
                        }
                        if (palavra==9){ // se a palavra que o jogador acertou for a numero 9, então exibirá a resposta
                            cout << "SOCIAL era a resposta." << endl;
                        }
                    }else{ // caso o jogador não acerte as palavras descritas nos ifs acima, então exibirá essa mensagem abaixo
                        cout << " As tentativas esgotaram. Você Perdeu!" << endl;
                    }
                system("pause");
                system("cls");
                break;

            case 2: // case no menu, o usuario selecione a opção 2 (SOBRE), executará esse comando

                system("cls"); // para limpar a tela
                cout << "\nOlá, seja bem vindo ao Jogo da Forca, trabalho elaborado pelo professor Rafael Ballottin, na disciplina de Algoritmos e Programação, curso de Ciências da Computação na Univali, feito em grupo pelos alunos Arthur Moser, Nathália Greiffo e Talita Fortuna no mês de outubro de 2021. \nRegras: Palavras serão geradas aleatoriamente contendo 6 letras, o jogador deve adivinhar as palavras ou as letras que a formam. Somente uma letra por vez no momento solicitado, cada letra acertada será mostrado na tela, cada erro será descontado uma tentativa, jogador terá 10 tentativas, após o fim da partida será retornado ao menu do jogo. \nBOM JOGO." << endl << endl;
                system("pause"); // pausar o console
                system("cls");
                break; // fechar essa case e voltará ao menu
                }

    }while(escolha==1||escolha==2); // faz ligação com o primeiro "do" do codigo, vai rodar enquanto a escolha for 1 ou 2, se nao seja selecionada nenhuma dessas opções, então encerará o jogo
    cout << "Que pena, volte outra hora.";
    return 0;
}
