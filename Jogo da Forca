                        cin >> letra;

                            if (letra =='e' || letra =='E' || letra =='s' || letra =='S' || letra =='p' || letra =='P' || letra =='o' || letra =='O' || letra =='a' || letra =='A') { // diminui as tentativas cada vez que o jogador seleciona uma letra, esteja ela no if ou else
                                cout << "Boa escolha, há essa letra" << endl;

                                if (letra =='e' || letra =='E'){
