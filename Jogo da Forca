                        cout << "Tentativas restantes: " << tentativas << endl;
                        cout << "Número de acertos: " << acertos << endl;
                        cout << "\nDigite uma letra: ";
                        cin >> letra;

                            if (letra =='p' || letra =='P' || letra =='r' || letra =='R' || letra =='e' || letra =='E' || letra =='s' ||letra=='S'||letra=='a'||letra=='A') { // diminui as tentativas cada vez que o jogador seleciona uma letra, esteja ela no if ou else
                                cout<<"Boa escolha, há essa letra"<<endl;

                                if (letra =='p' || letra =='P'){
