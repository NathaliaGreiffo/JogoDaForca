                        cout << "\nDigite uma letra: "; // solicita que o usuario digite uma letra
                        cin >> letra; // lê a letra digitada pelo jogador

                            if (letra =='a' || letra =='A' || letra =='c' || letra =='C' || letra =='e' || letra =='E' || letra =='s' || letra =='S' || letra =='o' || letra =='O') { // diminui as tentativas cada vez que o jogador seleciona uma letra, esteja ela no if ou else
                                cout << "Boa escolha, há essa letra" << endl;

                                if (letra =='a' || letra =='A'){ // se a letra A for selecionada, executará esse if
                                    letra1 ='A';

